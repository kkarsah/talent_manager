# Database Configuration
DATABASE_URL=sqlite:///./talent_manager.db
# For production: postgresql://user:pass@localhost/talent_manager

# Redis Configuration (for background tasks)
REDIS_URL=redis://localhost:6379/0

# Security
SECRET_KEY=your-super-secret-key-here-change-this-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# API Keys
OPENAI_API_KEY=your-openai-api-key-here
ELEVENLABS_API_KEY=your-elevenlabs-api-key-here

# YouTube API Configuration
YOUTUBE_CLIENT_ID=your-youtube-client-id
YOUTUBE_CLIENT_SECRET=your-youtube-client-secret
YOUTUBE_REDIRECT_URI=http://localhost:8000/auth/youtube/callback

# TikTok API Configuration (for future use)
TIKTOK_CLIENT_ID=your-tiktok-client-id
TIKTOK_CLIENT_SECRET=your-tiktok-client-secret

# Instagram API Configuration (for future use)
INSTAGRAM_CLIENT_ID=your-instagram-client-id
INSTAGRAM_CLIENT_SECRET=your-instagram-client-secret

# File Storage Configuration
STORAGE_PROVIDER=local  # local, wasabi, backblaze_b2
WASABI_ACCESS_KEY=your-wasabi-access-key
WASABI_SECRET_KEY=your-wasabi-secret-key
WASABI_BUCKET=talent-manager-content

# CDN Configuration
CLOUDFLARE_ZONE_ID=your-cloudflare-zone-id
CLOUDFLARE_API_TOKEN=your-cloudflare-api-token

# Application Configuration
DEBUG=true
LOG_LEVEL=INFO
MAX_CONTENT_LENGTH=16777216  # 16MB
UPLOAD_FOLDER=./content

# Development Settings
DEVELOPMENT=true
TESTING=false